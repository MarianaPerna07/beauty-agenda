# --------------------------------
# Stage 1: Base (Python slim)
# --------------------------------
FROM python:3.10-slim

# Avoid Python buffering in logs
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Install pip dependencies only
WORKDIR /app
COPY requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY . .

# Use gunicorn in production (faster than `python api.py`)
CMD ["gunicorn", "-w", "3", "-b", "0.0.0.0:5001", "api:app"]
